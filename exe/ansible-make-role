#!/usr/bin/env ruby

require 'ansible_make_role.rb'
require "shellopts"

USAGE = "c,clean f,force g,git +r,roles=DIR v,verbose version -- DIRECTORY..."

DEFAULT_ROLES_DIR = "./roles"

clean = false
force = false
git = false
roles_dirs = [] # A roles (plural) directory contain role (singular) directories
verbose = false

args = ShellOpts.process(USAGE, ARGV) { |opt, arg|
  case opt
    when '-c', '--clean'; clean = true
    when '-f', '--force'; force = true
    when '-g', '--git'; git = true
    when '-r', '--roles'
      File.directory?(arg) or ShellOpts::error "Not a directory: #{arg}"
      roles_dirs << arg
    when '-v', '--verbose'; verbose = true
    when '--version'; puts "ansible-make-role #{AnsibleMakeRole::VERSION}"; exit
  end
}

AnsibleMakeRole.force = force
AnsibleMakeRole.git = git
if verbose
  def verb(*msgs) print(msgs.join, "\n") end
else
  def verb(*_) end
end

if args.empty? && roles_dirs.empty? 
  if File.directory?(DEFAULT_ROLES_DIR)
    roles_dirs << DEFAULT_ROLES_DIR
  else
    ShellOpts::error "No roles given"
  end
end

roles = args
for roles_dir in roles_dirs
  roles += Dir["#{roles_dir}/*"].select { |d| File.directory?(d) }
end

if roles.empty?
  $stderr.puts "#{PROGRAM}: No roles found"
  exit 0
end

begin
  if clean
    for role in roles
      if AnsibleMakeRole.clean(role)
        verb("Cleaned #{role}")
      else
        verb("Skipped #{role} - already clean")
      end
    end
  else
    for role in roles
      if AnsibleMakeRole.make(role)
        verb("Updated #{role}")
      else
        verb("Skipped #{role} - up to date")
      end
    end
  end
rescue AnsibleMakeRole::Error => ex
  ShellOpts::fail(ex.message)
end
  
